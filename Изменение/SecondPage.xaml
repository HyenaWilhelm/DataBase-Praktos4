<Page x:Class="Изменение.SecondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Изменение"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SecondPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="MyDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="ButtonChange" Content="Изменить" Grid.Column="3" Grid.Row="1" Height="30" Width="100" Click="ButtonChange_Click"/>
        <TextBox x:Name="MyTbx" TextWrapping="Wrap" Text=""  Grid.Column="2" Grid.Row="1" Height="30" Width="100" RenderTransformOrigin="0.497,0.516" Margin="7,234,7,116" />
    </Grid>
</Page>
